{
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0
  },
  "llm": {
    "provider": "openai",
    "model": "gpt-4o",
    "apiKey": "your-api-key-here",
    "apiBase": "https://api.openai.com/v1",
    "temperature": 0.1,
    "contextWindow": 128000
  },
  "project": {
    "ignorePatterns": ["node_modules", "dist", "build", ".git", ".next", ".nuxt", "coverage", ".cache"],
    "supportedExtensions": [".ts", ".tsx", ".js", ".jsx", ".json", ".yaml", ".yml"]
  },
  "display": {
    "theme": "dark",
    "showStats": true
  }
}